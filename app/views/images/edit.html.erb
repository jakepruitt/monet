<h1>Edit an image</h1>
<%= form_for :image, url: image_path(@image), method: :patch do |f| %>
	<table>
		<tr>
			<td>
				<%= f.label :title %>
			</td>
			<td>
				<%= f.text_field :title, size:"20" %>
			</td>
		</tr>
		<tr>
			<td>
				<%= f.label :description %>
			</td>
			<td>
				<%= f.text_area :description, size:"30x2" %>
			</td>
		</tr>
	</table>
	<%= f.submit "Save Changes" %>
<% end %>
